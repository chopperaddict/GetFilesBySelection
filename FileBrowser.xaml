				 VerticalAlignment="Stretch"
				 Foreground="Black"
				TextWrapping="NoWrap"
				 Padding="5 5 5 0"
				 IsReadOnly="False"
				 AcceptsReturn="True"
				 AcceptsTab="True"
				 VerticalScrollBarVisibility="Visible"
				TextChanged="Sourcefile_TextChanged"
				 FontSize="18"
				 HorizontalScrollBarVisibility="Visible"
				 IsEnabled="True">

